
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>中国校园文化网</title>
    @Styles.Render("~/Content/Login")
</head>
<body>
    <header class="header"><a href="/" class="reg-btn">返回首页</a><a href="/home/reg">没有账号，去注册</a></header>
    <section class="container">
        <header class="form-header"><a href="#"><img src="/images/logo.png" alt=" "></a></header>
        <section class="login-tab clear">
            <p class="on">账户密码登录</p>
            <p>手机动态码登录</p>
        </section>
        <section class="login" style="display:block;">
            <section class="forms">
                <ul>
                    <li><input type="text" name=" " placeholder="手机号/账户名/邮箱" id="login-user"><h3><i class="iconfont">&#xe6ea;</i>&nbsp;您还没有输入账户名</h3></li>
                    <li><input type="password" name=" " placeholder="密码" id="login-pwd"><h3><i class="iconfont">&#xe6ea;</i>&nbsp;您还没有输入密码</h3></li>
                    <li><a href="#" class="forms-getpwd">忘记密码</a><input type="checkbox" name=" " value="1">&nbsp;&nbsp;记住密码</li>
                </ul>
            </section>
            <p class="form-submit"><input type="submit" value="登录"></p>
        </section>
        <section class="login">
            <section class="forms">
                <ul>
                    <li><input type="text" name=" " placeholder="手机号" id="reg-phone"><h3><i class="iconfont">&#xe6ea;</i>&nbsp;请填写正确的手机号</h3></li>
                    <li><p>获取动态码</p><input type="text" name=" " placeholder="动态码" id="reg-code"><h3><i class="iconfont">&#xe6ea;</i>&nbsp;请填写正确的手机号</h3></li>
                    <li><a href="#" class="forms-getpwd">忘记密码</a><input type="checkbox" name=" " value="1">&nbsp;&nbsp;记住密码</li>
                </ul>
            </section>
            <p class="form-submit"><input type="submit" value="注册"></p>
        </section>
        <section class="other clear">
            <ul>
                <li><a href="#"><p><i class="iconfont">&#xe648;</i></p><h3>&nbsp;&nbsp;QQ登录</h3></a></li>
                <li><a href="#"><p><i class="iconfont">&#xe69e;</i></p><h3>&nbsp;&nbsp;微信登录</h3></a></li>
            </ul>
        </section>
    </section>
    <script src="js/jquery-1.11.1.min.js"></script>
    <script src="js/fun.js"></script>
</body>
</html>