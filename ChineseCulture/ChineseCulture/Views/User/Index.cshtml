
@{
    Layout = null;
}
@using ChineseCulture.Model;

@model  User
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>中国校园文化网</title>
    @Styles.Render("~/Content/usercenter")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/selCheckbox")


</head>
<body>

    @{Html.RenderAction("PageHeader", "Partinal");}
    <section class="main c-con">
        <section class="center-canshu">
            <a href="#" class="center-cs-img"><img src="/images/emp-33.png" alt=" "></a>
            <div class="center-cs-about">
                <h3>@Model.user_name&nbsp;&nbsp;<a href="#"><i class="iconfont">&#xe754;</i></a></h3>
                <h4>@Model.user_regdate.ToString("yyyy年MM月dd日")注册</h4>
                <h5><p>新的一天，微笑面对!~</p>&nbsp;&nbsp;&nbsp;&nbsp;<a href="#"><i class="iconfont">&#xe754;</i></a></h5>
            </div>
        </section>
        <section class="center-tab clear">
            <ul>
                <li class="on">基本资料</li>
                <li>我的发布</li>

            </ul>
        </section>
        <section class="center-cen">
            <section class="center-item" style="padding-bottom:60px; background-color:#FFF;">
                <section class="user-info clear">
                    <ul>
                        <li><p>用户名</p>@Model.user_name</li>
                        <li><p>手机</p>@Model.user_telephone</li>
                        <li><p>性别</p>@Model.user_sex</li>
                        <li><p>教育水平</p>@Model.user_educational</li>
                        <li><p>生日</p>1999/11/05</li>
                        <li><p>绑定手机</p>@Model.user_telephone</li>
                        <li><p>家乡</p>@Model.user_address</li>
                        <li><p>邮箱</p>@Model.user_email</li>
                    </ul>
                </section>
                <a href="javascript:;" class="user-info-edt">编&nbsp;&nbsp;辑</a>
            </section>
            <section class="center-item clear" style="">
                @{Html.RenderAction("UserIndexArticle", "Partinal");}
                <aside class="user-sendaside">
                    <div class="user-r-send"><a href="/user/SendArticle"></a></div>
                    <div class="user-r-search">
                        <h3>搜索文章</h3>
                        <div class="user-rsearch-form"><p><input type="text" name=" " placeholder="请输入关键字"></p><p><input type="submit" value="&#xe66c;"></p></div>
                    </div>
                    <div class="user-r-date">
                        <h3><p class="ur-date-prev"><i class="iconfont">&#xe613;</i></p><p class="ur-date">2018</p><p class="ur-date-next"><i class="iconfont">&#xe647;</i></p></h3>
                        <div class="user-r-datelist clear">
                            <ul>
                                <li><a href="#">1月</a></li>
                                <li><a href="#">2月</a></li>
                                <li><a href="#">3月</a></li>
                                <li><a href="#">4月</a></li>
                                <li><a href="#">5月</a></li>
                                <li><a href="#">6月</a></li>
                                <li><a href="#">7月</a></li>
                                <li><a href="#">8月</a></li>
                                <li><a href="#">9月</a></li>
                                <li><a href="#">10月</a></li>
                                <li><a href="#">11月</a></li>
                                <li><a href="#">12月</a></li>
                            </ul>
                        </div>
                    </div>
                    
                </aside>
            </section>

        </section>
    </section>
    <section class="c-con clear" style="background-color:#FFF;">

        <section class="links">
            <h3><p>友情链接</p></h3>
            @{Html.RenderAction("FriendLink", "Partinal");}
        </section>
    </section>
    @{Html.RenderAction("Footer", "Partinal");}



</body>
</html>